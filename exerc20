#include <stdio.h>

int ehperfeito(int n) {
    
    int i = 1, soma = 0;
    
    for(i = 1; i < n; i++) {
        
        if(n%i == 0) {
            
            soma = i + soma;
            
        }
        
    }
    
    if(soma==n) {
        
        printf("O numero %d eh perfeito", n);
        
    }
    
    else {

        printf("O numero %d nao eh perfeito", n);
        
    }
    
    return 0;
    
}

int main()
{
    
    int n;
    
    printf("entre com um numero para saber se ele eh perfeito: \n");
    scanf("%d", &n);
    
    ehperfeito(n);

    return 0;
}
